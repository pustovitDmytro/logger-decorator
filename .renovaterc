{
    "extends": [
        "config:base"
    ],

    "rangeStrategy": "replace",
    "ignoreUnstable": true,
    
    "semanticCommits": "enabled",
    "semanticCommitScope": null,
    "semanticCommitType": "Chore",

    "separateMinorPatch": false,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,

    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": [
            "before 3am on the 15th through 20th day of the month"
        ]
    },

    "circleci": {
      "enabled": false
    },

    "prConcurrentLimit": 5,
    "prHourlyLimit": 1,
    "rebaseWhen": "conflicted",
    "assigneesFromCodeOwners": true,
    "labels": ["dependencies"],

    "vulnerabilityAlerts": {
        "labels": ["dependencies", "security"],
        "enabled": true,
        "automerge": true
    },

    "stabilityDays": 3,
    "prCreation": "not-pending",

    "packageRules": [
        {
            "matchSourceUrlPrefixes": ["https://github.com/pustovitDmytro/"],
            "groupName": "pustovitDmytro's packages",
            "commitBodyTable": true
        },
        {
            "matchDepTypes": ["devDependencies"],
            
            "groupName": "devDependencies (non-major)",
            "groupSlug": "dev-dependencies",
            "lockFileMaintenance": {
                "enabled": true
            },
            "commitBodyTable": true,
            "rangeStrategy": "bump",
            "semanticCommitType": "Chore",
            "schedule": [
                "before 3am on the 1th through 5th day of the month"
            ],
            "automerge": true
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["major"],
            "automerge": true,
            "semanticCommitType": "Chore"
        },
        {
            "matchDepTypes": ["dependencies"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        },    
        {
            "matchDepTypes": ["dependencies"],
            "matchUpdateTypes": ["major"],
            "semanticCommitType": "Breaking",
            "labels": ["dependencies", "breaking"],
            "automerge": false
        },               
        {
            "matchDepTypes": [ "dependencies", "require" ],
            "rangeStrategy": "pin",
            "semanticCommitType": "Upgrade"
        },
        {
            "matchDepTypes": [ "peerDependencies"],
            "rangeStrategy": "widen"
        }
    ]
}